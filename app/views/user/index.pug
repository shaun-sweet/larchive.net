extends ../layouts/layout.pug
include ../link/show.pug


block content
  .home-ui
    div.link-table
        h1.table-header Latest Distractions
        div#data-headers
          div.data-header-sender
            h2 Sender
          div.data-header-link
            h2 Link
          div.data-header-sent
            h2 Sent
          div.data-header-actions
            h2 Actions
        hr
        each link, num in links
          +linkDetails(link, num)
          div.entry-row
            div.data-sender
              p #{link.sender.username}
            div.data-link
              a(href=""+link.url, target="_blank") #{link.name}
            div.data-sent
              p #{prettyDate(link.createdAt)}
            div.data-actions
              a(href="#", id='details-button', data-toggle="modal", data-target="#showLink-"+num)
                img(src="/imgs/details-button.png", alt="show link details")
              a(href="/delete/link/"+link._id)
                img(src="/imgs/delete-button.png", alt="delete link")
    div.send-link
      p The world could use some more love
      br
      p Send some!
      a(href='/link/new', alt="submit new link")
        img(src='imgs/paperairplane.png', alt='send link')
