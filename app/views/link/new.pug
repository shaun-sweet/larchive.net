extends ../layouts/layout.pug

block content
  script(src="/js/submit-link.js")
  div.container.submit-link
    input(type="hidden", name="_csrf", value=csrf_token )
    form(action="/link", method='post', id='new-link-form')
      input(type="hidden", name="_csrf", value=csrf_token )
      .form-group
        label(for="url") Link URL
        input.form-control(type='text', placeholder='Link URL', name='url', id='url')
      .form-group
        label(for='name') Link display name
        input.form-control(type='text', placeholder='Link name', name='name', id='name')
      .form-group
        label(for="subject") Short URL description or message for your friend
        textarea.form-control(type='textarea', placeholder='Description of link content', name='subject', id='subject')
      .form-group
        label(for='recipient') Who do you want to send this link to?
        select.form-control(name='recipient', id='recipient')
          each friend in friends
            option #{friend.username}
      button.btn.btn-primary Submit link!
